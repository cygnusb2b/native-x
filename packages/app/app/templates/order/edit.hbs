<div class="row">
  <div class="col">
    <h3 class="mb-0 float-left">
      Modify {{ model.name }}
    </h3>
    {{#-bs/button "danger" class="float-right" size="small" outline=true click=(route-action 'hardDelete' model 'user.index')}}{{-ion 'android-close'}} Delete{{/-bs/button}}
  </div>
</div>
<hr>

{{partial "order/form"}}

<div class="row mt-4">
  <div class="col">
    <h4 class="mb-0">Line Items</h4>
  </div>
</div>
<hr>
<div class="row mt-4">
  <div class="col">
    {{#each model.lineItems as |item|}}
        {{#link-to 'line-item.edit' item.id class='list-group-item list-group-item-action flex-column align-items-start'}}
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{item.name}}</h5>
            <small>{{moment item.start}} - {{moment item.end}}</small>
          </div>
          <small>{{item.id}}</small>
        {{/link-to}}
    {{else}}
    <h5 class="text-primary">No line items found.</h5>
    {{/each}}
  </div>
</div>
