<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="publisher-name">Name {{required-field-label}}</label>
      {{input
        type="text"
        required=true
        value=form.model.name
        class="form-control"
        id="publisher-name"
        placeholder="Acme Corp."
        autofocus=true
        focusOut=(action form.actions.autosave)
        keyUp=(action form.actions.autosave 750)
      }}
      <div class="invalid-feedback">
        Please provide a publisher name.
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group mb-0">
      <label for="publisher-logo">Logo URL</label>
      {{input
        type="url"
        value=form.model.logo
        class="form-control"
        id="publisher-logo"
        placeholder="https://some.domain/image.extension"
        focusOut=(action form.actions.autosave)
        keyUp=(action form.actions.autosave 750)
      }}
      <div class="invalid-feedback">
        Please provide a valid URL, or leave empty.
      </div>
    </div>
  </div>
</div>
