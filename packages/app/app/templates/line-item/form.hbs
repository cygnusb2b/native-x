<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="name">Name</label>
      {{input type="text" value=model.name class="form-control" id="name" placeholder="Name"}}
    </div>
  </div>
</div>

<fieldset class="mt-3">
  <legend>Targeting Criteria</legend>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <label for="start">Start Date</label>
        {{-calendar currentDay=model.start maxDate=startMax minDate=startMin onSelect=(action (mut model.end))}}
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label for="end">End Date</label>
        {{-calendar currentDay=model.end maxDate=endMax minDate=endMin onSelect=(action (mut model.end)) canRemove=true}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col">
      <label for="placements">Placements</label>
      {{autocomplete-multiple type="placement" selected=model.placements onSelect=(action (mut model.placements))}}
    </div>
  </div>

  <div class="row">
    <div class="form-group col">
      {{key-values values=model.criteria}}
    </div>
  </div>

</fieldset>


<div class="row mt-3">
  <div class="col">
    {{#-bs/button 'success' click=(route-action 'save' model 'line-item') disabled=(eq model.canSave false)}}
      {{-ion 'checkmark-round'}} Save
    {{/-bs/button}}
    {{!-- {{#unless model.canSave}}
      <small class="form-text text-info">In order to save, {{model.reasonForPreventSave}}</small>
    {{/unless}} --}}
  </div>
</div>
