<div class="row">
  <div class="col">
    <h3 class="mb-0 float-left">
      Modify {{ model.name }}
    </h3>
    {{#-bs/button 'success' class="float-right" size="small" outline=true click=(route-action 'update' model 'advertiser') disabled=(eq model.canSave false)}}
      {{-ion 'checkmark-round'}} Save
    {{/-bs/button}}
    {{#-bs/button "danger"  class="float-right mr-1" size="small" outline=true click=(route-action 'hardDelete' model 'advertiser.index')}}
      {{-ion 'android-close'}} Delete
    {{/-bs/button}}
  </div>
</div>
<hr>

{{partial "advertiser/form"}}

<div class="row mt-4">
  <div class="col">
    <h4 class="mb-0">
      Campaigns
      <div class="float-right">
        {{#link-to 'campaign.create.advertiser' model.id class='btn btn-outline-primary btn-sm'}}
          {{-ion 'android-create'}} Create
        {{/link-to}}
      </div>
    </h4>
  </div>
</div>
<hr>

<div class="row mb-4">
  <div class="col">
    {{#each model.campaigns as |campaign|}}
      {{#link-to 'campaign.edit' campaign.id class='list-group-item list-group-item-action flex-column align-items-start'}}
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">{{campaign.name}}</h5>
          <small>{{moment campaign.start}} - {{moment campaign.end}}</small>
        </div>
        <small>{{campaign.id}}</small>
      {{/link-to}}
    {{else}}
      <h5 class="text-primary">No campaigns found.</h5>
    {{/each}}
  </div>
</div>
