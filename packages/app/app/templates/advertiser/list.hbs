{{#link-to 'advertiser.edit' model.id class='list-group-item list-group-item-action flex-column align-items-start'}}
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1">{{model.name}}</h5>
    <small>Modified {{moment-from-now model.updatedAt}}</small>
  </div>

  <div class="float-right">
    <button type="button" class="btn btn-sm btn-light">
      Campaigns <span class="badge badge-light">{{if model.campaignCount model.campaignCount 0}}</span>
      <span class="sr-only">existing campaigns</span>
    </button>
  </div>

  <small>{{model.id}}</small>
{{/link-to}}
