<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="name">Name</label>
      {{input type="text" value=model.name class="form-control" id="name" placeholder="Name"}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="name">Advertiser</label>
      {{autocomplete-single
        placeholder="Select an advertiser"
        type="advertiser"
        selected=model.advertiser
        onSelect=(action (mut model.advertiser))
      }}
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="name">URL</label>
      {{input type="text" value=model.url class="form-control" id="url" placeholder="URL"}}
    </div>
  </div>
</div>
