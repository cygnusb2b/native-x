<div class="row">
  <div class="col">
    <h3 class="mb-0">
      Campaigns
      <div class="float-right">
        {{#link-to 'campaign.create' class='btn btn-outline-primary btn-sm'}}
          {{-ion 'android-create'}} Create
        {{/link-to}}
      </div>
    </h3>
  </div>
</div>

{{#paginate-models
  models=model
  routeName='campaign.index'
  totalCount=totalCount
  hasNextPage=hasNextPage
  endCursor=endCursor
  first=first
  after=after
  ascending=ascending
  sortBy=sortBy
  sortOptions=sortOptions
  as |model|
}}
  {{partial 'campaign/list'}}
{{/paginate-models}}
