{{#each links as |link|}}
  <div class="form-group">
    <label>{{link.label}}</label>
    <div class="input-group input-group-sm">
      {{input type="url" class="form-control" value=link.url required=true disabled=true aria-label="Link URL"}}
      <div class="input-group-append">
        <button class="btn btn-primary" type="button" {{action "editLink" link}}>{{entypo-icon "pencil"}} <span class="d-none d-md-inline">Edit</span></button>
        {{confirm-button
          icon="cross"
          confirmIcon="warning"
          labelClass="d-none d-md-inline"
          label="Remove"
          class="btn-warning"
          onConfirm=(action "removeLink" link)
        }}
      </div>
    </div>
  </div>
{{/each}}

<button class="btn btn-sm btn-primary" type="button" {{action "createLink"}}>{{entypo-icon "plus"}} Add Link</button>

{{campaign-links/modal isModalShowing=isModalShowing link=activeLink onSubmit=(action "handleLink")}}
