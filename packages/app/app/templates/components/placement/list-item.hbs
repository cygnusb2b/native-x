{{#link-to
  routeName item.id
  class=class
}}
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1">{{item.publisher.name}}</h5>
    {{#if item.updatedAt}}
      <small class="d-block" title="{{moment-format item.updatedAt 'MMM Do, YYYY h:mm a'}}">
        {{entypo-icon "clock"}} Updated {{moment-from-now item.updatedAt}}
      </small>
    {{/if}}
  </div>

  {{#if item.topic.name}}
    <h6 class="mb-1">{{item.topic.name}}</h6>
  {{/if}}
  <p class="mb-1">
    <span class="h6">{{item.template.name}}</span>
    {{#if item.template.description}}
      <span class="text-muted">[{{item.template.description}}]</span>
    {{/if}}
  </p>
  {{#if item.name}}
    <p class="mb-1">{{item.name}}</p>
  {{/if}}
  <small>ID: {{item.id}}</small>
{{/link-to}}
