<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-4 col-xs-4">
        <div class="h1 text-center {{ color }}">
          {{entypo-icon icon}}
        </div>
      </div>
      <div class="col-8 text-right">
        <p class="mb-0 text-uppercase">{{ title }}</p>
        <span class="h4 {{ color }}" title="{{ value }}">{{ number-format value format }}</span>
        {{#if percentage }}
          <small class="text-muted">({{ number-format percentage "0%" }})</small>
        {{/if}}
      </div>
    </div>
    <div class="footer text-center text-muted">
      <hr>
      <small class="text-muted text-uppercase">{{ subtitle }}</small>
    </div>
  </div>
</div>
