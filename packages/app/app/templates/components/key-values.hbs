<fieldset>
  <legend>Custom Values</legend>
  <div class="row align-items-end">
    <div class="form-group col"><label for="key">Key</label></div>
    <div class="form-group col"><label for="value">Value</label></div>
    <div class="form-group col-2"></div>
  </div>

{{#each values as |kv|}}
<div class="row align-items-end">
  <div class="form-group col">
    {{input type="text" class="form-control" value=kv.key}}
  </div>
  <div class="form-group col">
    {{input type="text" class="form-control" value=kv.val}}
  </div>
  <div class="form-group col-2">
    <button type="submit" class="btn btn-danger btn-block" {{action "remove" kv}}>
      {{-ion "android-close"}} Remove
    </button>
  </div>
</div>
{{/each}}
<div class="row align-items-end">
  <div class="form-group col">
    {{input type="text" class="form-control" value=key}}
  </div>
  <div class="form-group col">
    {{input type="text" class="form-control" value=val}}
  </div>
  <div class="form-group col-2">
    <button type="submit" class="btn btn-primary btn-block" {{action "add"}}>
      {{-ion "android-add"}} Add
    </button>
  </div>
</div>
</fieldset>
