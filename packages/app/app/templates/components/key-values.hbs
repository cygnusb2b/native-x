  <div class="row align-items-end small">
    <div class="form-group col"><label for="key">Key</label></div>
    <div class="form-group col"><label for="value">Value</label></div>
    <div class="form-group col-2"></div>
  </div>

{{#each values as |kv|}}
<div class="row align-items-end">
  <div class="form-group col">
    {{input type="text" class="form-control key" value=kv.key}}
  </div>
  <div class="form-group col">
    {{input type="text" class="form-control value" value=kv.value}}
  </div>
  <div class="form-group col-2">
    <button type="submit" class="btn btn-danger btn-block" {{action "remove" kv}}>
      {{-ion "android-close"}} Remove
    </button>
  </div>
</div>
{{/each}}
<div class="row align-items-end">
  <div class="form-group col-2 offset-10 text-right">
    <button type="submit" class="btn btn-primary btn-block" {{action "add"}}>
      {{-ion "android-add"}} Add
    </button>
  </div>
</div>
