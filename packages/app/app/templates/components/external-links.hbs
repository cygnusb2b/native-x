{{#each values as |kv|}}
<div class="row align-items-end">
  <div class="form-group col">
    {{input type="text" placeholder="Link Text" class="form-control key" value=kv.label}}
  </div>
  <div class="form-group col">
    {{input type="text" placeholder="https://..." class="form-control value" value=kv.url}}
  </div>
  <div class="form-group col-2">
    <button type="submit" class="btn btn-sm btn-danger btn-block" {{action "remove" kv}}>
      {{-ion "android-close"}} Remove
    </button>
  </div>
</div>
{{/each}}
<div class="row align-items-end">
  <div class="form-group col-2 offset-10 text-right">
    <button type="submit" class="btn btn-sm btn-primary btn-block" {{action "add"}}>
      {{-ion "android-add"}} Add
    </button>
  </div>
</div>
