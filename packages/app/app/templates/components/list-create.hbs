<div class="form-group row">
  <div class="col">
    {{input type="text" placeholder="Name" class="form-control" value=modelName}}
  </div>
  {{#if withAdvertiser}}
    <div class="col">
      {{autocomplete-advertiser selected=advertiser onSelect=(action (mut advertiser))}}
    </div>
  {{/if}}
  <div class="col-2">
    <button type="submit" class="btn btn-primary btn-block" {{action "create"}}>
      {{-ion "android-create"}} Create
    </button>
  </div>
</div>

{{#if error}}
<div class="alert alert-danger">
  {{error}}
</div>
{{/if}}
