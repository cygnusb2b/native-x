{{#link-to 'order.edit' order.id class='list-group-item list-group-item-action flex-column align-items-start'}}
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1">{{order.name}}</h5>
    <small>
      {{moment-format order.start "MMMM Do YYYY"}} -
      {{#if order.end}}
      {{moment-format order.end "MMMM Do YYYY"}}
      {{else}}
      {{-ion "ios-infinite"}}
      {{/if}}
    </small>
  </div>
  <div class="mb-1">{{order.advertiser.name}}</div>
  <small>{{order.id}}</small>

{{/link-to}}
