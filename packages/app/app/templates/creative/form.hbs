<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="name">Name</label>
      {{input type="text" value=model.name class="form-control" id="name" placeholder="Name"}}
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="teaser">Teaser</label>
      {{input type="text" value=model.teaser class="form-control" id="teaser" placeholder="Short description"}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="linkUrl">Link URL</label>
      {{input type="text" value=model.linkUrl class="form-control" id="linkUrl" placeholder="https://..."}}
    </div>
  </div>
  <div class="col">
    <div class="form-group">
      <label for="linktTitle">Link Title</label>
      {{input type="text" value=model.linktTitle class="form-control" id="linktTitle" placeholder="Alternative text for link"}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="imageUrl">Image URL</label>
      {{input type="text" value=model.imageUrl class="form-control" id="imageUrl" placeholder="https://..."}}
      <img class="w-100 mt-3" src="{{model.imageUrl}}" alt="{{model.linkTitle}}" />
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="start">Start Date</label>
      {{-calendar currentDay=model.start maxDate=startMax minDate=startMin onSelect=(action (mut model.end))}}
    </div>
  </div>
  <div class="col">
    <div class="form-group">
      <label for="end">End Date</label>
      {{-calendar currentDay=model.end maxDate=endMax minDate=endMin onSelect=(action (mut model.end)) canRemove=true}}
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    {{#-bs/button 'success' click=(route-action 'save' model 'creative') disabled=(eq model.canSave false)}}
      {{-ion 'checkmark-round'}} Save
    {{/-bs/button}}
    {{!-- {{#unless model.canSave}}
      <small class="form-text text-info">In order to save, {{model.reasonForPreventSave}}</small>
    {{/unless}} --}}
  </div>
</div>
