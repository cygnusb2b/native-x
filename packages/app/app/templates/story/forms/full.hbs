{{partial "story/forms/create"}}
<hr>
<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="teaser">Teaser</label>
      {{textarea
        value=form.model.teaser
        class="form-control"
        id="teaser"
        placeholder="Teaser"
        focusOut=(action form.actions.autosave)
      }}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      {{textarea
        rows="20"
        value=form.model.body
        class="form-control"
        id="body"
        placeholder="Body"
        focusOut=(action form.actions.autosave)
      }}
    </div>
  </div>
</div>
