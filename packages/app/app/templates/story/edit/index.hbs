{{#model-form
  model=model
  shouldAutosave=true
  onSubmit=(action "update") as |form|
}}
  <div class="card-body">
    {{ partial "story/forms/full" }}
  </div>

  <div class="card-footer text-right">
    {{confirm-button
      icon="trash"
      label="Delete"
      class="btn-danger"
      disabled=isActionRunning
      onConfirm=(action "delete" model.id "story.index")
    }}
  </div>
{{/model-form}}
