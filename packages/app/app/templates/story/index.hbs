{{#link-to "story.create" class="btn btn-success create float-right fixed-bottom"}}{{-ion "android-create"}} Create{{/link-to}}
{{#-bs/button 'secondary' class='fixed-bottom' click=(route-action 'scrollToTop')}}{{-ion 'chevron-up'}}{{/-bs/button}}

<div class="row">
  <div class="col">
    <h3 class="float-left mb-0">Stories</h3>
  </div>
</div>
<hr>
<div class="row mb-4">
  <div class="col">
    <div class="row">
      <div class="col-8 col-sm-6">
        {{ partial 'list/search-controls'}}
      </div>
      <div class="col-4 col-sm-6">
        {{ partial 'list/filters' }}
      </div>
    </div>
  </div>
</div>

<div class="row mb-2">
  <div class="col">
    {{#each model as |story|}}
        {{#link-to 'story.edit' story.id class='list-group-item list-group-item-action flex-column align-items-start'}}
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{story.name}}</h5>
            <small>{{#if story.createdDate}}{{moment-from-now story.createdDate}}{{/if}}</small>
          </div>
          <div class="mb-1">{{story.linkUrl}}</div>
          <small>{{story.id}}</small>
        {{/link-to}}
      {{else}}
        <h5 class="text-primary">No results found.</h5>
      {{/each}}
  </div>
</div>

<div class="row">
  <div class="col">
    {{ partial 'list/pagination' }}
  </div>
</div>


