{{#model-form
  model=model
  shouldAutosave=true
  onSubmit=(action "update") as |form|
}}
  <div class="card-body">
    {{ partial "manage/story/forms/full" }}
  </div>

  <div class="card-footer d-flex justify-content-between">
    <a href={{model.previewUrl}} class="btn btn-info" role="button" target="_blank">{{entypo-icon "eye"}} Preview</a>
    {{confirm-button
      icon="trash"
      label="Delete"
      class="btn-danger"
      disabled=isActionRunning
      onConfirm=(action "delete" model.id "story.index")
    }}
  </div>
{{/model-form}}
