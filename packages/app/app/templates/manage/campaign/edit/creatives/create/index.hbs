{{#model-form
  model=model
  shouldAutosave=false
  onInit=(route-action "setDetailsForm")
  onSubmit=(route-action "transitionTo" "manage.campaign.edit.creatives.create.image")  as |form|
}}
  {{#bs-modal/body}}
    {{ partial "manage/campaign/forms/creative" }}
  {{/bs-modal/body}}

  {{#bs-modal/footer class="d-flex justify-content-between"}}
    {{model-save-button
      label="Next"
      icon="controller-next"
      disabled=isActionRunning
    }}
    {{confirm-button
      icon="cross"
      label="Cancel"
      class="btn-warning"
      disabled=isActionRunning
      onConfirm=(route-action "hideModal")
    }}
  {{/bs-modal/footer}}
{{/model-form}}
