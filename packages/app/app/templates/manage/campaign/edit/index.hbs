{{#model-form
  model=model
  shouldAutosave=true
  onSubmit=(action "update") as |form|
}}
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-lg-8">
        {{ partial "manage/campaign/forms/details" }}
      </div>
      <div class="col-12 col-lg-4 mt-4 mt-lg-0 mb-0">
        {{partial "manage/campaign/summary"}}
      </div>
    </div>
  </div>

  <div class="card-footer d-flex w-100 justify-content-between">

    <div class="d-flex flex-column">
      {{#x-toggle
        class="justify-content-start"
        size="medium"
        theme="material"
        value=active
        onLabel="Active"
        offLabel="Paused"
        showLabels=true
        onToggle=(action "togglePaused") as |toggle|
      }}
        {{toggle.switch class="w-auto px-0"}}
        {{toggle.onLabel}}
      {{/x-toggle}}
    </div>


    <div class="d-flex flex-column">
      {{confirm-button
        icon="trash"
        label="Delete"
        class="btn-danger justify-content-end"
        disabled=isActionRunning
        onConfirm=(action "delete")
      }}
    </div>
  </div>
{{/model-form}}
