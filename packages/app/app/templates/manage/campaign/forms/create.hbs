<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="campaign-type">Campaign Type</label>
      {{#form.elements.select
        id="campaign-type"
        autocomplete="campaign-type"
        class="custom-select"
        name="type"
        label="Type"
        value=campaignType
        aria-labeledby="campaign-type-help"
        on-change=(action "setType")
        required=true as |control|
      }}
        {{#control.element as |select|}}
          {{#each campaignTypes as |type|}}
            {{#select.option value=type.value}}{{type.label}}{{/select.option}}
          {{/each}}
        {{/control.element}}
        {{control.elements.invalid-feedback}}
      {{/form.elements.select}}
    </div>
  </div>
</div>

{{#if campaignType}}
  {{partial formPartial}}
{{/if}}

