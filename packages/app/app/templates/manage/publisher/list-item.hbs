{{#link-to
  "manage.publisher.edit" item.id
  class="list-group-item list-group-item-action flex-column align-items-start"
}}
  <div class="d-flex w-100 justify-content-between">

    <div class="d-flex flex-column">
      <div class="d-flex flex-row">
        {{#if item.logo.src}}
          <div class="d-flex flex-column my-auto mr-3">
            {{imgix-img originalSrc=item.logo.src width=100 w="100" trim=auto fit="clip"}}
          </div>
        {{/if}}
        <div class="d-flex flex-column">
          <h4 class="mb-1">{{item.name}}</h4>
          {{#if item.domainName}}
            {{!-- @todo This should fallback and display the account domain if not set --}}
            <p class="mb-1">{{item.domainName}}</p>
          {{/if}}
          <small>ID: {{item.id}}</small>
        </div>
      </div>
    </div>

    <div class="d-none d-md-flex flex-column align-items-end text-right">
      <div class="mt-auto">
        {{user-attribution label="Updated" user=item.updatedBy date=item.updatedAt}}
        {{user-attribution label="Created" user=item.createdBy date=item.createdAt}}
      </div>
    </div>

  </div>
{{/link-to}}
