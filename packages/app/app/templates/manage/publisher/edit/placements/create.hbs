{{#bs-modal show=true size="large" onHidden=(route-action "transitionTo" "manage.publisher.edit.placements") as |modal|}}
  {{#modal.header}}
    <h5 class="modal-title">Create Placement for <span class="text-muted">{{model.publisher.name}}</span></h5>
    <button {{action modal.actions.hide}} type="button" class="close" aria-label="Close">
      {{entypo-icon "cross"}}
    </button>
  {{/modal.header}}
  {{progress-bar show=isActionRunning}}
  {{#model-form
    model=model
    shouldAutosave=false
    onSubmit=(action "create") as |form|
  }}
    {{#modal.body}}
        {{partial "manage/publisher/edit/placements/form"}}
    {{/modal.body}}

    {{#modal.footer}}
      {{model-save-button disabled=isActionRunning}}
    {{/modal.footer}}
  {{/model-form}}

{{/bs-modal}}
