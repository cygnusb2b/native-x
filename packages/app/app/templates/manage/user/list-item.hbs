{{#link-to
  "manage.user.edit" item.id
  class="list-group-item list-group-item-action flex-column align-items-start"
}}
  <div class="d-flex w-100 justify-content-between">

    <div class="d-flex flex-column">
      <h4 class="mb-1">{{item.givenName}} {{item.familyName}}</h4>
      {{#if item.deleted}}<p class="mb-1 text-warning">Deleted</p>{{/if}}
      <p class="mb-1">{{item.email}}</p>
      <small>ID: {{item.id}}</small>
    </div>

    <div class="d-none d-md-flex flex-column align-items-end text-right">
      <div>
        <small class="d-block">{{#if (eq item.role "Admin")}}{{entypo-icon "lock-open"}}{{else}}{{entypo-icon "lock"}}{{/if}} {{item.role}}</small>
      </div>
      <div class="mt-auto">
        {{user-attribution label="Updated" date=item.updatedAt}}
        {{user-attribution label="Created" date=item.createdAt}}
      </div>
    </div>

  </div>
{{/link-to}}
