{{#bs-modal show=true size="large" onHidden=(route-action "transitionTo" "manage.topic.edit.placements") as |modal|}}
  {{#modal.header}}
    <h5 class="modal-title">Edit Placement</h5>
    <button {{action modal.actions.hide}} type="button" class="close" aria-label="Close">
      {{entypo-icon "cross"}}
    </button>
  {{/modal.header}}
  {{progress-bar show=isActionRunning}}
  {{#model-form
    model=model
    shouldAutosave=true
    onSubmit=(action "update") as |form|
  }}
    {{#modal.body}}
      {{partial "manage/topic/edit/placements/form"}}
    {{/modal.body}}
  {{/model-form}}

{{/bs-modal}}
