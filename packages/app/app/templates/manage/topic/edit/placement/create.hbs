{{#bs-modal show=true size="large" onHidden=(route-action "transitionTo" "manage.topic.edit.placement") as |modal|}}
  {{#modal.header}}
    <h5 class="modal-title">Create Placement: {{model.publisher.name}} ({{model.topic.name}})</h5>
    <button {{action modal.actions.hide}} type="button" class="close" aria-label="Close">
      {{entypo-icon "cross"}}
    </button>
  {{/modal.header}}

  {{#model-form
    model=model
    shouldAutosave=false
    onSubmit=(action "create") as |form|
  }}
    {{#modal.body}}
        {{partial "manage/topic/edit/placement/form"}}
    {{/modal.body}}

    {{#modal.footer}}
      {{model-save-button disabled=isActionRunning}}
    {{/modal.footer}}
  {{/model-form}}

{{/bs-modal}}
