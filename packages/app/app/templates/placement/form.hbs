<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="placement-name">Name</label>
      {{input type="text" required=true value=model.name class="form-control" id="placement-name" placeholder="Name" autofocus=true}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group mb-0">
      <label>Publisher</label>
      {{#type-ahead
        placeholder="Begin typing to search..."
        type="publisher"
        closeOnSelect=true
        onchange=(action (mut model.publisher))
        selected=model.publisher as |item|
      }}
        {{item.name}}
      {{/type-ahead}}
    </div>
  </div>
</div>
