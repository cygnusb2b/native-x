<div class="row">
  <div class="col">
    <h3 class="mb-0">
      Modify Placement
      <div class="float-right">
        {{#-bs/button "success" class="float-right" size="small" outline=true click=(route-action "update" model "placement") disabled=(eq canSave false)}}
          {{-ion "checkmark-round"}} Save
        {{/-bs/button}}
        {{#-bs/button "danger"  class="float-right mr-1" size="small" outline=true click=(route-action "hardDelete" model "placement.index")}}
          {{-ion "android-close"}} Delete
        {{/-bs/button}}
        {{#-bs/button "secondary"  class="float-right mr-1" size="small" outline=true click=(route-action "linkTo" "placement.index")}}
          {{-ion "android-arrow-back"}} Back
        {{/-bs/button}}
      </div>
    </h3>
  </div>
</div>
<hr>

{{partial "placement/form"}}
